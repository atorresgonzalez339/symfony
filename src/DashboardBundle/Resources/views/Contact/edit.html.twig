{% extends 'DashboardBundle:Common:backend2.html.twig' %}

{% block breadcrumb %}
	<li><a href="{{ path('contact_index') }}">Contacts</a></li>
	<li><a href="#">Edir</a></li>
{% endblock breadcrumb%}

{% block content %}
	<div class="card card-data-grid">
		<div class="title">
			<h5> Contacts </h5>
			<div class="btn-group right">
				<a href="{{ path('contact_index') }}" class="btn btn-small waves-dark waves-effect"><i class="mdi mdi-hardware-keyboard-arrow-left left"></i>Back</a>
				<a id="save_action" class="btn btn-small waves-dark waves-effect"> <i class="mdi mdi-content-save left"></i> Save</a>
			</div>
		</div>
		<div class="content">
			<form data-parsley-validate id="formSubmit" class="form-horizontal" action="" method="post" {{ form_enctype(form) }}>
				<div class="row" style="padding-left: 20px;padding-right: 50%;margin-top: 0rem;">
					<div class="row" style="margin-top: 0rem;">
						<div class="col m12" style="padding-bottom: 0px;">
							<div class="input-field">
								{{ form_widget(form.first_name, {'attr': {'required':'required'}}) }}
								<label for="property_lease_term" class="">First Name</label>
							</div>
						</div>
					</div>
					<div class="row" style="margin-top: 0rem;">
						<div class="col m12" style="padding-bottom: 0px;">
							<div class="input-field">
								{{ form_widget(form.last_name, {'attr': {'required':'required'}}) }}
								<label for="property_lease_term" class="">Last Name</label>
							</div>
						</div>
					</div>
					<div class="row" style="margin-top: 0rem;">
						<div class="col m12">
							<div class="input-field">
								{{ form_widget(form.email, {'attr': {'required':'required'}}) }}
								<label for="property_lease_term" class="">Email</label>
							</div>
						</div>
					</div>
				</div>
				{{ form_rest(form) }}
			</form>
		</div>
	</div>
	<script src="{{ asset('bundles/dashboard/material/js/parsley.min.js') }}" type="text/javascript"></script>
	<script src="{{ asset('bundles/common/js/application.js') }}" type="text/javascript"></script>
	<script>
		$(document).ready(function(){
			$('#contact_email').attr('type','email');
			$('#save_action').click(function(){
				App.submit('formSubmit','{{ path('contact_update', { 'id': entity.id }) }}')
			});
		});
	</script>
{% endblock content %}
