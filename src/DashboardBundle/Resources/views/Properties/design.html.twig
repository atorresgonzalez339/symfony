{% extends 'DashboardBundle:Common:backend2.html.twig' %}

{% block stylesheets_priority %}
  {{ parent() }}
  <link href="{{ asset('bundles/dashboard/material/css/select2.min.css') }}" rel="stylesheet" type="text/css"/>
  <style>
    #map-canvas {
      height: 200px;
      margin-bottom: 30px;
    }

    #pac-input {
      background-color: #fff;
      padding: 0 11px 0 13px;
      width: 400px;
      font-family: Roboto;
      font-size: 15px;
      font-weight: 300;
      text-overflow: ellipsis;
    }
  </style>
{% endblock stylesheets_priority %}

{% block breadcrumb %}
  <li><a href="#">Properties</a></li>
{% endblock breadcrumb %}

{% block content %}
  <div class="row">
    <div class="col m12">
      <ul class="tabs z-depth-1" style="width: 100%;">
        <li class="tab col s3"><a class="active" href="#icons-mdi">Main Information</a></li>
        <li class="tab col s3"><a href="#icons-fa" class="">Image Gallery</a></li>
        <li class="tab col s3"><a href="#icons-ion" class="">Files</a></li>
      </ul>
    </div>
  </div>


  <div class="row">
    <div class="col m12">

  <form action="#!">
    <div class="card">
      <div class="title">
        <h5> Basic Information </h5>
        <div class="btn-group right">
          <a href="#!" class="waves-effect waves-dark btn btn-small"><i class="mdi mdi-content-save left"></i>Save</a>

        </div>
      </div>
      <div class="content">
        <div class="input-field">
          <input id="input_name" type="text" name="name" length="100">
          <label for="input_name" class="">Name</label>
        </div>
        <div class="input-field">
          <textarea id="textarea-message" class="materialize-textarea" name="message" length="250"></textarea>
          <label for="textarea-message">Message</label>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="title">
        <h5> Attributes </h5>
      </div>
      <div class="content">
        <div class="row">
          <div class="col m6">
            <div class="input-field">
              <i class="mdi-editor-attach-money prefix"></i>
              <input id="input_price" type="text" name="subject">
              <label for="input_price" class="">Price</label>
            </div>
            <div class="input-field">
              <i class="mdi-action-open-with prefix"></i>
              <input id="input_size" type="text" name="subject">
              <label for="input_size" class="">Size</label>
            </div>
            <div class="input-field">
              <i class="mdi-action-invert-colors prefix"></i>
              <input id="input_baths" type="text" name="subject">
              <label for="input_baths" class="">Baths</label>
            </div>
            <div class="input-field">
              <i class="mdi-maps-hotel prefix"></i>
              <input id="input_rooms" type="text" name="subject">
              <label for="input_rooms" class="">Rooms</label>
            </div>
            <div class="input-field">
              <i class="mdi-maps-directions-car prefix"></i>
              <input id="input_garages" type="text" name="subject">
              <label for="input_garages" class="">Garages</label>
            </div>
          </div>
          <div class="col m6">
            <div class="input-field">
              <select class="select2">
                <option value="AK">Apartament</option>
                <option value="HI">Condo</option>
                <option value="HI">House</option>
                <option value="HI">Villa</option>
              </select>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="title">
        <h5> Location </h5>
      </div>
      <div class="content">

        <div class="row">
          <div class="col m12">
            <input id="pac-input" class="controls" type="text" placeholder="Enter a location">
            <div id="map-canvas"></div>
          </div>
        </div>

        <div class="row">
          <div class="col m6">
            <div class="input-field">
              <i class="mdi-maps-place prefix"></i>
              <input id="input-latitude" type="text" name="subject">
              <label for="input-latitude" class="">Latitude</label>
            </div>
          </div>
          <div class="col m6">
            <div class="input-field">
              <i class="mdi-maps-place prefix"></i>
              <input id="input-longitude" type="text" name="subject">
              <label for="input-longitude" class="">Lontgitude</label>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('bundles/dashboard/material/js/select2.full.min.js') }}"></script>

  <script
      src="http://maps.googleapis.com/maps/api/js?libraries=weather,geometry,visualization,places,drawing&amp;sensor=false"
      type="text/javascript"></script>
  <script src="{{ asset('bundles/dashboard/assets/libraries/jquery-google-map/infobox.js') }}"></script>
  <script src="{{ asset('bundles/dashboard/assets/libraries/jquery-google-map/markerclusterer.js') }}"></script>
  <script src="{{ asset('bundles/dashboard/assets/libraries/jquery-google-map/jquery-google-map.js') }}"></script>
  <script src="{{ asset('bundles/dashboard/assets/js/map.js') }}"></script>

{% endblock javascripts %}