{% extends 'DashboardBundle:Common:backend2.html.twig' %}

{% block breadcrumb %}
	<li><a href="#">Contacts List</a></li>
	<li><a href="#">New</a></li>
{% endblock breadcrumb%}

{% block content %}
	<div class="card card-data-grid">
		<div class="title">
			<h5> Contacts </h5>
			<div class="btn-group right">
				<a href="{{ path('contactlist_index') }}" class="btn btn-small waves-dark waves-effect"><i class="mdi mdi-hardware-keyboard-arrow-left left"></i>Back</a>
				<a id="save_action" class="btn btn-small waves-dark waves-effect"> <i class="mdi mdi-content-save left"></i> Save</a>
				{#<a id="save_and_close_action" class="btn btn-small waves-dark waves-effect"> <i class="mdi mdi-action-done left"></i> Save and Close</a>#}
			</div>
		</div>
		<div class="content">
			<form id="formSubmit" class="form-horizontal" action="" method="post" {{ form_enctype(form) }}>
				<div class="row" style="padding-left: 20px;padding-right: 50%;margin-top: 1rem;">
					<div class="row" style="margin-top: 0rem;">
						<div class="col m12" style="padding-bottom: 15px">
							<div class="input-field">
								{{ form_widget(form.name) }}
								<label for="property_lease_term" class="">Name</label>
							</div>
						</div>
					</div>
				</div>
				{{ form_rest(form) }}
			</form>
		</div>
	</div>
	<script src="{{ asset('bundles/common/js/application.js') }}" type="text/javascript"></script>
	<script>
		$(document).ready(function(){
			$('#save_action').click(function(){
				App.submit('formSubmit','{{ path('contactlist_create') }}')
			});

			$('#save_and_close_action').click(function(){
				App.submit('formSubmit','{{ path('contactlist_create_close') }}')
			});
		});
	</script>
{% endblock content %}
