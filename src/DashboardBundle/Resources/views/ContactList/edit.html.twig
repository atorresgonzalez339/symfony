{% extends 'DashboardBundle:Common:backend2.html.twig' %}

{% block breadcrumb %}
  <li>
    <a href="{{ path('contactlist_index') }}">Contacts List</a>
    <i class="mdi-navigation-chevron-right"></i>
  </li>
  <li><a href="#">Edit</a></li>
{% endblock breadcrumb %}

{% block content %}
  <style>

    .circle-status.red {
      position: absolute;
      width: 15px;
      height: 15px;
      overflow: hidden;
      left: 190px;
      display: inline-block;
      vertical-align: middle;
    }

    .circle-status.green {
      position: absolute;
      width: 15px;
      height: 15px;
      overflow: hidden;
      left: 15px;
      display: inline-block;
      vertical-align: middle;
    }

    .arrow-switch-legent{
      color: #424242;
      font-size: 20px;
      background-color: #F9F9F9;
      border-radius: 4px;
    }

    .arrow-switch-legent:hover{
      background-color: #9E9E9E;
    }

  </style>
  <div class="card card-data-grid">
    <div class="title">
      <h5> Contacts List</h5>
      <div class="btn-group right">
        <a href="{{ path('contactlist_index') }}" class="btn btn-small waves-dark waves-effect"><i
              class="mdi mdi-hardware-keyboard-arrow-left left"></i>Back</a>
        <a id="save_action" class="btn btn-small waves-dark waves-effect"> <i class="mdi mdi-content-save left"></i>
          Save</a>
      </div>
    </div>
    <div class="content">

      <form id="formSubmit" class="form-horizontal" action="" method="post" {{ form_enctype(form) }}>
        <div class="row" style="padding-left: 20px;padding-right: 3%;margin-top: 1rem;">
          <div class="row" style="margin-top: 0rem;margin-left: -20px;">
            <div class="col m6" style="padding-bottom: 15px;">
              <div class="input-field">
                {{ form_widget(form.name) }}
                <label for="property_lease_term" class="">Name</label>
              </div>
            </div>
          </div>
        </div>
        {{ form_rest(form) }}
      </form>


    </div>
  </div>

<div class="card">
  <div class="title">
    <h5> Add contacts of current list</h5>
    <div class="btn-group right">
      <a id="save_action" class="btn btn-small waves-dark waves-effect"> <i class="mdi mdi-content-add left"></i>
        Add contact</a>
    </div>
  </div>
  <div class="content" style="padding-top: 5px">
    <div class="row" style="margin-top: 5px;">
      <div class="col m6">
        <span style="font-size: 18px">All contacts:</span>
        {{ grid(grid, 'DashboardBundle:Grid:gridTemplateContactsAjax.html.twig') }}
      </div>
      <div class="col m6">
        <span style="font-size: 18px">Contacts of current list:</span>
        {{ grid(grid2, 'DashboardBundle:Grid:gridTemplateMyContactsAjax.html.twig') }}
      </div>
    </div>

    <div class="row">
      <div class="col m2" style="padding-right: 0px">
        <i class="green circle circle-status"> <span></span></i> <b style="margin-left: 30px;"> Enable contact</b>
      </div>
      <div class="col m2">
        <i class="red circle circle-status"> <span></span></i> <b style="margin-left: 30px;"> Disable contact</b>
      </div>
      <div class="col m4">
        <div style="margin-top: -6px;">
          <i class="mdi mdi-hardware-keyboard-arrow-right arrow-switch-legent"></i>
          <i class="mdi mdi-hardware-keyboard-arrow-left arrow-switch-legent"></i>
          <b> Switch contact </b>
        </div>
      </div>
    </div>
  </div>
</div>
  <script src="{{ asset('bundles/common/js/application.js') }}" type="text/javascript"></script>
  <script>
    $(document).ready(function () {
      $('#save_action').click(function () {
        App.submit('formSubmit', '{{ path('contactlist_update', { 'id': entity.id }) }}')
      });
    });
  </script>
{% endblock content %}
