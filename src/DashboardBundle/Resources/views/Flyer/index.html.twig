{% extends 'DashboardBundle:Common:backend2.html.twig' %}

{% block breadcrumb %}
	<li><a href="#">Flyers</a></li>
{% endblock breadcrumb%}

{% block stylesheets_priority %}
  {{ parent() }}
	<link href="{{ asset('bundles/dashboard/material/css/select2.min.css') }}" rel="stylesheet" type="text/css"/>
{% endblock stylesheets_priority %}

{% set idFormGrid  = grid.hash %}

{% block content %}
	<div class="card card-data-grid">
		<div class="title">
			<h5> Flyers </h5>
			<div class="btn-group right">
				<a class="btn btn-small waves-dark waves-effect" href="{{ path('flyer_design', {'property_id':'37', 'template_id':'1'}) }}"><i class="mdi mdi-content-add left"></i>Add</a>
				<a id="edit_action" class="btn btn-small waves-dark waves-effect">
					<i class="mdi mdi-content-create left"></i>
					Edit
				</a>
				<a class="btn btn-small waves-dark waves-effect red"><i class="mdi mdi-content-clear left"></i>Delete</a>
				</div>
		</div>
		<div class="content">
			{{ grid(grid, 'DashboardBundle:Grid:gridTemplateAjax.html.twig') }}
		</div>
	</div>

	<script>
		$(document).ready(function(){
			$('#edit_action').click(function(){
				$('#{{idFormGrid}}').attr('action', '{{path("flyer_options", {'action':'edit'})}}');
    		$('#{{idFormGrid}}').submit();
			});
		});
	</script>
{% endblock content %}

{% block javascripts %}
  {{ parent() }}
	<script src="{{ asset('bundles/dashboard/material/js/select2.full.min.js') }}"></script>
{% endblock javascripts %}