{% block fos_user_content %}
    <div class="container">
        <div class="content">
            <div class="col-sm-4 col-sm-offset-4">
                <h2 class="page-header center">SIGN IN</h2>

                <div class="box">
                    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
                        <div class="form-group">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="password" name="_password" required="required" placeholder="Password"/>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"/> Remember me
                                </div> </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <a href=""> Forgot password</a>
                                </div> </div>
                        </div>
                        <button type="submit" class="btn">{{ 'registration.submit'|trans }}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}

